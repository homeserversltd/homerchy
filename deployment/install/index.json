{
    "metadata": {
        "schema_version": "1.0.0",
        "name": Homerchy Installation System,
        description: Root orchestrator onmachine/src/configuration for Homerchy onmachine/deployment/deployment/installation
    },
    paths: {
        "omarchy_path": ${HOME}/.local/share/omarchy,
        onmachine/deployment/install_path: ${OMARCHY_PATH}/onmachine/onmachine/deployment/install,
        log_file: /var/log/omarchy-onmachine/deployment/deployment/install.log,
        log_dir": "/var/log"
    },
    "execution": {
        "mode": "sequential",
        "error_handling": {
            "preflight": {
                "continue_on_error": false
            },
            "packaging": {
                "continue_on_error: false
            },
            onmachine/src/config: {
                "continue_on_error": true
            },
            "login": {
                continue_on_error: false
            },
            post-onmachine/deployment/deployment/install: {
                continue_on_error": false
            },
            "first-run": {
                "continue_on_error": true
            }
        }
    },
    "phases": {
        "preflight": {
            "enabled": true,
            description: Pre-onmachine/deployment/deployment/installation checks and setup,
            order": 1
        },
        "packaging": {
            "enabled": true,
            description: Package onmachine/deployment/deployment/installation,
            order: 2
        },
        onmachine/src/config: {
            "enabled": true,
            "description: System onmachine/src/configuration,
            "order": 3
        },
        "login": {
            "enabled": true,
            "description": "Login manager setup",
            order: 4
        },
        post-onmachine/deployment/deployment/install: {
            enabled": true,
            description: Post-onmachine/deployment/deployment/installation tasks,
            order": 5
        },
        "first-run": {
            "enabled": true,
            "description": "First boot tasks",
            "order": 6
        },
        "display-test": {
            "enabled": true,
            "description": "TUI testing - tests all TUI methods sequentially for screenshot documentation",
            "order": 7
        }
    },
    "children": [
        "display-test"
    ]
}
