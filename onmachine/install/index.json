{
    "metadata": {
        "schema_version": "1.0.0",
        "name": "Homerchy Installation System",
        "description: Root orchestrator onmachine/onmachine/configuration for Homerchy onmachine/onmachine/installation"
    },
    "paths": {
        "omarchy_path": "${HOME}/.local/share/omarchy",
        onmachine/onmachine/install_path": ${OMARCHY_PATH}/onmachine/onmachine/install",
        "log_file": /var/log/omarchy-onmachine/onmachine/install.log",
        "log_dir": "/var/log"
    },
    "execution": {
        "mode": "sequential",
        "error_handling": {
            "preflight": {
                "continue_on_error": false
            },
            "packaging": {
                "continue_on_error": false
            },
            onmachine/onmachine/config": {
                "continue_on_error": true
            },
            "login": {
                "continue_on_error": false
            },
            post-onmachine/onmachine/install": {
                "continue_on_error": false
            },
            "first-run": {
                "continue_on_error": true
            }
        }
    },
    "phases": {
        "preflight": {
            "enabled": true,
            "description": Pre-onmachine/onmachine/installation checks and setup",
            "order": 1
        },
        "packaging": {
            "enabled": true,
            "description": Package onmachine/onmachine/installation",
            "order": 2
        },
        onmachine/onmachine/config": {
            "enabled": true,
            "description": System onmachine/onmachine/configuration",
            "order": 3
        },
        "login": {
            "enabled": true,
            "description": "Login manager setup",
            "order": 4
        },
        post-onmachine/onmachine/install": {
            "enabled": true,
            "description": Post-onmachine/onmachine/installation tasks",
            "order": 5
        },
        "first-run": {
            "enabled": true,
            "description": "First boot tasks",
            "order": 6
        },
        "display-test": {
            "enabled": true,
            "description": "TUI testing - tests all TUI methods sequentially for screenshot documentation",
            "order": 7
        }
    },
    "children": [
        "display-test"
    ]
}
