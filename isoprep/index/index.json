{
  "metadata": {
    "schema_version": "1.0.0",
    "name": "homerchy-iso-builder",
    "version": "1.0.0"
  },
  "paths": {
    "repo_root": "${ISOPREP_REPO_ROOT}",
    "work_dir": "${HOMERCHY_WORK_DIR:-/mnt/work/homerchy-isoprep-work}",
    "out_dir": "${HOMERCHY_WORK_DIR:-/mnt/work/homerchy-isoprep-work}/isoout",
    "profile_dir": "${HOMERCHY_WORK_DIR:-/mnt/work/homerchy-isoprep-work}/profile"
  },
  "children": [
    "prepare",
    "package_management",
    "profile_assembly",
    "build"
  ],
  "execution": {
    "continue_on_error": false,
    "parallel": false
  }
}

